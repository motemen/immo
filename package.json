  "bugs": {
    "url": "https://github.com/motemen/revenant/issues"
  },
  "homepage": "https://github.com/motemen/revenant#readme",
  "devDependencies": {
    "dtsm": "^0.10.3",
    "typescript": "^1.5.3"
  },
  "dependencies": {
    "minimist": "^1.1.3"
  }
}
